<h1>Blog Posts for <%= @current_tenant.name %></h1>

<%= link_to 'New Blog Post', new_tenants_blog_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @blog_posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, tenants_blog_post_path(post) %></td>
        <td><%= post.user.name %></td>
        <td>
          <%= link_to 'Edit', edit_tenants_blog_post_path(post) %> |
          <%= link_to 'Delete', tenants_blog_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
