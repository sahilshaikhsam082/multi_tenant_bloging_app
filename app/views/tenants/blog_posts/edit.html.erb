<h1>Edit Blog Post</h1>

<%= form_with(model: @blog_post, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, rows: 10 %>
  </div>

  <div>
    <%= form.submit 'Update Blog Post' %>
  </div>
<% end %>

<%= link_to 'Back to Blog Posts', blog_posts_path %>
